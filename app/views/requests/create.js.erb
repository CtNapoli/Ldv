$('#about #name .errors').html('');
$('#about #email .errors').html('');
$('#about #phone_number .errors').html('');
$('#about #more_info .errors').html('');
$('#success').html('');

<% unless(@success) %>
    <% if(@request.errors[:name].any?) %>
        $('#about #name .errors').html('<%= error_messages(@request, :name) %>');
    <% end %>

    <% if(@request.errors[:email].any?) %>
        $('#about #email .errors').html('<%= error_messages(@request, :email) %>');
    <% end %>

    <% if(@request.errors[:phone_number].any?) %>
        $('#about #phone_number .errors').html('<%= error_messages(@request, :phone_number) %>');
    <% end %>

    <% if(@request.errors[:more_info].any?) %>
        $('#about #more_info .errors').html('<%= error_messages(@request, :more_info) %>');
    <% end %>
<% end %>