<% cache(sitemap_cache_key) do %>
<% time_format = '%FT%X%:z' %>
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc>https://ldvhomes.com/</loc>
    <priority>1.0</priority>
  </url>
  <url>
    <loc>https://ldvhomes.com/about</loc>  
    <priority>0.8</priority>
  </url>
  <url>
    <loc>https://ldvhomes.com/owners</loc> 
    <priority>0.8</priority>
  </url>

    <% @apartment.each do |apartment| %>
        <%= cache(apartment) do %>
            <url>
                <loc><%= apartment_url(apartment) %></loc>
                <lastmod><%= apartment.updated_at.strftime(time_format) %></lastmod>
                <changefreq>daily</changefreq>
                <priority>0.8</priority>
            </url>
        <% end %>
    <% end %>

</urlset>
<% end %>